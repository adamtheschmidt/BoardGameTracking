extends layout

block content
    div(class="container-fluid", ng-hide="clicked")
        div(class="row-fluid")
            div(class="col-sm-3 col-md-4 col-lg-4" )
            div(class="col-sm-6 col-md-4 col-lg-4" )
                h1(style="text-align:center") Login Page
                p.lead 
                br
                div(class="jumbotron")
                    form(role='form', method="post", style='max-width: 300px;')
                        .form-group
                            input.form-control(type='text', name="username", placeholder='Enter Username')
                        .form-group
                            input.form-control(type='password', name="password", placeholder='Password')
                        if message
                            div(style= "text-align:center" class="alert alert-"+ type +"" role="alert")= message
                            //alert-success
                            //alert alert-info"
                            //alert alert-warning
                            //alert alert-danger
                        h1= ""
                        button.btn.btn-default(type='submit') Submit &nbsp;
                        a(href='/')
                            button.btn.btn-primary(type="button" style="float:right") Cancel
                p(style='text-align:center')= "Dont have an account? "
                    span
                        a(href="/register")= "Register Here"
            div(class="col-sm-3 col-md-4 col-lg-4" )
