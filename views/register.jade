extends layout

block content
    .container
        h1 Register
        p.lead 
        br
        form(role='form', method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='text', name="username", placeholder='Enter Username')
            //not implemented
            .form-group
                input.form-control(type='text', name="email", placeholder='Email Address')
            .form-group
                input.form-control(type='password', name="password", placeholder='Password')
            // not implemented
            .form-group
                input.form-control(type='password', name="passwordConf", placeholder='Confirm Password')
            button.btn.btn-default(type='submit') Submit &nbsp;
            a(href='/login')
                button.btn.btn-primary(type="button") Login &nbsp;
            a(href='/')
                button.btn.btn-primary(type="button") Cancel
